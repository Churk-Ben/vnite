{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts",
    "src/types/**/*",
    "src/utils/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/renderer/src/*"],
      "@ui": ["src/renderer/src/components/ui"],
      "@ui/*": ["src/renderer/src/components/ui/*"],
      "@appTypes/*": ["src/types/*"],
      "@appUtils": ["src/utils"],
    }
  }
}
